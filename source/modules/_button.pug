//-------------------------------------------------------
//- Modules :: Button
//-------------------------------------------------------
mixin buttons({ text, type, iconFont, iconBefore, disabled, size, isFull })
  button.button(
    type= 'button'
    class= type ? `button--${type}` : null
    class= size ? `button--${size}` : null
    class= isFull ? 'button--full' : null
    class= disabled ? 'button--disabled' : null
    disabled= disabled ? 'disabled' : null
  )&attributes(attributes)
    if iconBefore
      i(class= iconBefore)
    | #{text}
    if iconFont
      i(class= iconFont)